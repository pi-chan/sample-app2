%h1 Diaries#new
%p Find me in app/views/diaries/new.html.haml

= form_for [@user, @diary], role:"form", html:{method: :post} do |f|
  .form-group
    = f.label :title
    = f.text_field :title, autofocus:true, class:"form-control"
  .form-group
    = f.label :body
    = f.text_area :body, class:"form-control"
  .form-group
    = f.submit class:"form-control"
