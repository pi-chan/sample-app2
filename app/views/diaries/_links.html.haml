.diary-links
  - if user.id == current_user.id
    %span= link_to "編集", edit_user_diary_path(user, diary), role: "button", class:"btn btn-primary btn-xs"
    %span= link_to "削除", user_diary_path(user, diary), method: :delete, data: { confirm: 'Are you sure?' }, role: "button", class:"btn btn-danger btn-xs"
  - elsif current_user.likes.find_by_diary_id(diary.id)
    %span(id="like-diary-#{diary.id}")= render partial: "diaries/dislike", locals:{diary: diary}
  - else    
    %span(id="like-diary-#{diary.id}")= render partial: "diaries/like", locals:{diary: diary}
    
