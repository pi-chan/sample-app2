.row.product-single
  .col-xs-8
    .name
      #{@product.name}
    .description
      #{@product.description.html_safe}
  .col-xs-4
    = link_to image_tag(@product.image.url), @product.image.url, target: "_blank"
    .price #{number_with_delimiter(@product.price)} 円
    = form_for [current_user, @cart_product], role: "form", html:{method: :post} do |f|
      = f.hidden_field :cart_id, value: current_user.cart.id
      = f.hidden_field :product_id, value: @product.id
      = f.hidden_field :amount, value: 1
      .form-group
        = f.submit "カートに入れる", class:"form-control btn btn-primary"

